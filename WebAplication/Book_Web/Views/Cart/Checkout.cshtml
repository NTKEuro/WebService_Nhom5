@model Book_Web.Models.CartModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
 
<h2>Thanh toán</h2>
@using (Html.BeginForm("Checkout", "Cart", FormMethod.Post))
{ @Html.ValidationSummary(true)

         <div class="row">
			<div class="span1 column-divider">
					
					<h4>Tổng số lượng: @Model.ChiTietDonHangs.Count</h4>
			
            </div><!--/span 9-->
            <fieldset>
                <legend>Thông tin cần thiết</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.HoTenNN)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.HoTenNN)
                    @Html.ValidationMessageFor(model => model.HoTenNN)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.DiaChiNN)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DiaChiNN)
                    @Html.ValidationMessageFor(model => model.DiaChiNN)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Email)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.SDT)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.SDT)
                    @Html.ValidationMessageFor(model => model.SDT)
                </div>
        
            </fieldset>
            </div>
          <br />
          <div class="cleaner">&nbsp;</div>
          <div class="cleaner">&nbsp;</div>
          <div class="cleaner">&nbsp;</div>
          <div class="cleaner">&nbsp;</div>
          
         <div class="row">
			<div class="span8">
            <table width="650px" cellspacing="0" cellpadding="5">
                    
                            <tr bgcolor="#7E5D27">
                        	<th width="180" align="left">Tên sách </th> 
                       	  	<th width="70" align="center">Số lượng </th> 
                        	<th width="140" align="right">Đơn giá </th> 
                        	<th width="140" align="right">Thành tiền </th> 
                        	<th width="150"> </th>
                                
                                <th></th>
                            </tr>
                            @for (int i = 0; i<Model.ChiTietDonHangs.Count;i++ )
                            {
                                
                            <tr class="first last odd">
                                <td>
                                    <a href="" title="Xem đơn hàng">@Model.ChiTietDonHangs[i].Sach.Tensach</a>
                                </td>
                                
                                <td>@Model.ChiTietDonHangs[i].SoLuong</td>
                                <td align="right">@string.Format("{0:0,0 VNĐ}",(Model.ChiTietDonHangs[i].GiaTien / Model.ChiTietDonHangs[i].SoLuong) )</td>
                                <td align="right">@string.Format("{0:0,0 VNĐ}",Model.ChiTietDonHangs[i].GiaTien)</td>
                            </tr>
                                
                            }
                    </table>
					</div>
                <div class="span4home info-boxes">
                                           
                    <p>Tổng cộng : <b>@string.Format("{0:0,0 VNĐ}",ViewBag.Tongtien )</b></p>
                 	<hr />
                    
                    <button class="btn" type="submit" id="thanhtoan" value="">Thanh Toán</button>
                    
                </div>
                </div>
            }


