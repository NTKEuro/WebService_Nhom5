<div id="templatemo_container">
	<div id="templatemo_menu">
    	<ul>
            <li>@Html.ActionLink("Trang chủ","Index","Home")</li>
            <li>@Html.ActionLink("Sản phẩm","Index","Product")</li> 
            <li>@Html.ActionLink("Tìm kiếm nâng cao","SearchAdvanced","Product")</li>
            
            <li>@Html.ActionLink("Liên hệ","Contact","Home")</li> 
               @if (!Request.IsAuthenticated)
               {
         
            <li>@Html.ActionLink("Đăng ký", "Signup", "Account")</li> 
               }
            <li style="float:right; margin-top:-5px;">@using(Html.BeginForm("Search","Product",new {id ="keyword"},FormMethod.Post,null))
                                    {
                                        <input style=" color:Black; background:#DCDCDC; border-radius: 7px;" list="tudong" id="keyword" name="keyword" value="" /><button class="btn">Tìm</button>
                                        }</li>
 
            @{  Book_Web.Book_Services.Book_ServiceClient sv = new Book_Web.Book_Services.Book_ServiceClient();
                List<Book_Web.Book_Services.BizSach> ListSach = sv.LayListSach();
             <Datalist id="tudong">
             @foreach(Book_Web.Book_Services.BizSach item in ListSach)
             {
                <option>@item.Tensach</option>
             }
            </Datalist>
            }
    	</ul>
