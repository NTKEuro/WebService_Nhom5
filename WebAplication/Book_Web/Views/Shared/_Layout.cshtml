            @if (Request.IsAuthenticated)
            {
                 <h1>Xin chào @User.Identity.Name</h1>
                <ul>
                <li>@Html.ActionLink("Đăng xuất", "Logout", "Account")</li>
                <li>@Html.ActionLink("Thông tin cá nhân","EditAccount","Account")</li>
                <li>@Html.ActionLink("Thay đổi mật khẩu","ChangePass","Account")</li>
