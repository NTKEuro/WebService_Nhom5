@model Book_Web.Models.ChangePassModel

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dổi mật khẩu</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Thông tin cần</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MatKhauCu)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MatKhauCu)
            @Html.ValidationMessageFor(model => model.MatKhauCu)
        </div>

        <div class="editor-label">
             Mật khẩu mới
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MatKhau)
            @Html.ValidationMessageFor(model => model.MatKhau)
        </div>

        <div class="editor-label">
             Nhập lại mật khẩu mới
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NhapLaiMatKhau)
            @Html.ValidationMessageFor(model => model.NhapLaiMatKhau)
        </div>

        <p>
            <input class="btn" type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay về trang sản phẩm", "Index","Product")
</div>
@if (ViewBag.Co == 0)
{
    <script>alert("Mật khẩu không đúng");</script>
    ViewBag.Co = null;
}
else 
{
    ViewBag.Co = null;
}